{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "lib": ["es6", "dom"],
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/monaco-editor/esm"
  ]
}
